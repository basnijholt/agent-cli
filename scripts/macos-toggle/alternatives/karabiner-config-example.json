{
    "description": "Agent-CLI Transcription Toggle",
    "manipulators": [
        {
            "description": "Cmd+Shift+R to toggle transcription",
            "from": {
                "key_code": "r",
                "modifiers": {
                    "mandatory": ["left_command", "left_shift"]
                }
            },
            "to": [
                {
                    "shell_command": "/path/to/agent-cli/scripts/toggle-transcription-macos.sh"
                }
            ],
            "type": "basic"
        }
    ]
}

