layout {
    pane split_direction="vertical" {
        pane {
            name "Ollama"
            command "ollama"
            args "serve"
        }
        pane split_direction="horizontal" {
            pane {
                name "Whisper"
                cwd "/Users/bas.nijholt/Work/agent-cli/scripts"
                command "./run-whisper-uvx.sh"
            }
            pane split_direction="horizontal" {
                pane {
                    name "Piper"
                    cwd "/Users/bas.nijholt/Work/agent-cli/scripts"
                    command "./run-piper-uvx.sh"
                }
                pane {
                    name "OpenWakeWord"
                    cwd "/Users/bas.nijholt/Work/agent-cli/scripts"
                    command "./run-openwakeword-uvx.sh"
